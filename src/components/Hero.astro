            </svg>
            Star on GitHub
          </span>
        </a>
      </div>

      <!-- Dashboard Preview Mockup -->
      <div id="dashboard-preview-container" class="relative max-w-5xl mx-auto">
        <div class="relative rounded-xl overflow-hidden border border-slate-700 shadow-2xl shadow-indigo-500/20" role="img" aria-label="Dashboard preview showing LLM performance metrics and traces">
          <!-- Dashboard mockup with gradient background -->
          <div class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 p-8">
            <!-- Mock dashboard header -->
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center gap-3" aria-hidden="true">
                <div class="w-3 h-3 rounded-full bg-red-500"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                <div class="w-3 h-3 rounded-full bg-green-500"></div>
              </div>
              <div class="text-xs text-slate-500 font-mono">dashboard.agentops.dev</div>
            </div>
            
            <!-- Mock dashboard content -->
            <div class="space-y-4">
              <!-- Stats row -->
              <div class="grid grid-cols-3 gap-4">
                <div class="bg-slate-800/50 rounded-lg p-4 border border-slate-700">
                  <div class="text-xs text-slate-400 mb-1">Total Requests</div>
                  <div class="text-2xl font-bold text-white">1.2M</div>
                  <div class="text-xs text-green-400">↑ 23% this week</div>
                </div>
                <div class="bg-slate-800/50 rounded-lg p-4 border border-slate-700">
                  <div class="text-xs text-slate-400 mb-1">Avg Latency</div>
                  <div class="text-2xl font-bold text-white">234ms</div>
                  <div class="text-xs text-green-400">↓ 12% faster</div>
                </div>
                <div class="bg-slate-800/50 rounded-lg p-4 border border-slate-700">
                  <div class="text-xs text-slate-400 mb-1">Cost Saved</div>
                  <div class="text-2xl font-bold text-white">$4.2K</div>
                  <div class="text-xs text-green-400">↓ 68% reduction</div>
                </div>
              </div>
              
              <!-- Chart placeholder -->
              <div class="bg-slate-800/50 rounded-lg p-6 border border-slate-700">
                <div class="flex items-center justify-between mb-4">
                  <div class="text-sm font-semibold text-white">LLM Performance</div>
                  <div class="text-xs text-slate-400">Last 7 days</div>
                </div>
                <div class="h-32 flex items-end gap-2" role="img" aria-label="Bar chart showing LLM performance over the last 7 days">
                  <div class="flex-1 bg-indigo-500/30 rounded-t" style="height: 60%"></div>
                  <div class="flex-1 bg-indigo-500/30 rounded-t" style="height: 75%"></div>
                  <div class="flex-1 bg-indigo-500/30 rounded-t" style="height: 45%"></div>
                  <div class="flex-1 bg-indigo-500/30 rounded-t" style="height: 85%"></div>
                  <div class="flex-1 bg-indigo-500/30 rounded-t" style="height: 70%"></div>
                  <div class="flex-1 bg-indigo-500/30 rounded-t" style="height: 90%"></div>
                  <div class="flex-1 bg-indigo-500 rounded-t" style="height: 100%"></div>
                </div>
              </div>
              
              <!-- Recent traces -->
              <div class="bg-slate-800/50 rounded-lg p-4 border border-slate-700">
                <div class="text-sm font-semibold text-white mb-3">Recent Traces</div>
                <div class="space-y-2">
                  <div class="flex items-center justify-between text-xs">
                    <span class="text-slate-300 font-mono">gpt-4-turbo</span>
                    <span class="text-green-400">✓ 187ms</span>
                  </div>
                  <div class="flex items-center justify-between text-xs">
                    <span class="text-slate-300 font-mono">claude-3-opus</span>
                    <span class="text-green-400">✓ 234ms</span>
                  </div>
                  <div class="flex items-center justify-between text-xs">
                    <span class="text-slate-300 font-mono">gpt-4-turbo</span>
                    <span class="text-green-400">✓ 156ms</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>
</section>


<style>
  /* Floating orb animations */
  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
    animation: float 20s ease-in-out infinite;
  }

  .orb-1 {
    width: 500px;
    height: 500px;
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    top: -10%;
    left: -10%;
    animation-delay: 0s;
    animation-duration: 25s;
  }

  .orb-2 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, #8b5cf6, #06b6d4);
    top: 40%;
    right: -5%;
    animation-delay: 5s;
    animation-duration: 30s;
  }

  .orb-3 {
    width: 450px;
    height: 450px;
    background: linear-gradient(135deg, #06b6d4, #6366f1);
    bottom: -15%;
    left: 30%;
    animation-delay: 10s;
    animation-duration: 35s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    25% {
      transform: translate(30px, -30px) scale(1.1);
    }
    50% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    75% {
      transform: translate(20px, 30px) scale(1.05);
    }
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .orb {
      animation: none;
    }
  }
</style>
