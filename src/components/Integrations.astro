---
// Integrations component - displays supported integrations grouped by category

interface Integration {
  name: string;
  category: 'llm' | 'framework' | 'sdk';
}

const integrations: Integration[] = [
  // LLM Providers
  { name: 'OpenAI', category: 'llm' },
  { name: 'Anthropic', category: 'llm' },
  { name: 'Google', category: 'llm' },
  { name: 'Cohere', category: 'llm' },
  
  // Frameworks
  { name: 'LangChain', category: 'framework' },
  { name: 'LlamaIndex', category: 'framework' },
  { name: 'Haystack', category: 'framework' },
  
  // SDKs
  { name: 'Python', category: 'sdk' },
  { name: 'Node.js', category: 'sdk' },
  { name: 'REST API', category: 'sdk' },
];

// Group integrations by category
const groupedIntegrations = {
  llm: integrations.filter(i => i.category === 'llm'),
  framework: integrations.filter(i => i.category === 'framework'),
  sdk: integrations.filter(i => i.category === 'sdk'),
};

const categoryLabels = {
  llm: 'LLM Providers',
  framework: 'Frameworks',
  sdk: 'SDKs',
};
---

<section id="integrations" class="py-24 bg-slate-900">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Integrations
      </h2>
      <p class="text-xl text-slate-400 max-w-3xl mx-auto">
        Works seamlessly with your existing AI stack
      </p>
    </div>

    <div class="space-y-12">
      {Object.entries(groupedIntegrations).map(([category, items]) => (
        <div class="integration-category">
          <h3 class="text-2xl font-semibold text-white mb-6 text-center">
            {categoryLabels[category as keyof typeof categoryLabels]}
          </h3>
          <div class="integration-grid grid grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6">
            {items.map((integration) => (
              <div 
                class="integration-logo flex items-center justify-center p-6 bg-slate-800 rounded-lg border border-slate-700 transition-all duration-300 hover:border-indigo-500 hover:bg-slate-750"
                data-integration={integration.name}
                data-category={integration.category}
              >
                <div class="text-center">
                  <div class="text-slate-400 hover:text-white transition-colors duration-300 font-medium">
                    {integration.name}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .integration-logo {
    filter: grayscale(100%);
    opacity: 0.7;
  }

  .integration-logo:hover {
    filter: grayscale(0%);
    opacity: 1;
  }

  @media (max-width: 768px) {
    .integration-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 769px) and (max-width: 1023px) {
    .integration-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .integration-grid {
      grid-template-columns: repeat(6, 1fr);
    }
  }
</style>
