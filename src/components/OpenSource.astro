---
// OpenSource component for OpenSearch AgentOps marketing website
// Displays GitHub statistics, license info, and links to repository and self-hosting docs

interface Props {
  githubUrl?: string;
  stars?: number;
  forks?: number;
  contributors?: number;
  license?: string;
  docsUrl?: string;
}

const {
  githubUrl = 'https://github.com/opensearch-project/agentops',
  stars = 2500,
  forks = 180,
  contributors = 45,
  license = 'Apache 2.0',
  docsUrl = '/docs/self-hosting',
} = Astro.props;

// Format numbers with commas
const formatNumber = (num: number): string => {
  return num.toLocaleString('en-US');
};
---

<section id="open-source" class="py-20 bg-slate-950">
  <div class="container mx-auto px-6">
    <div class="max-w-5xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          100% Open Source
        </h2>
        <p class="text-lg text-slate-400 max-w-3xl mx-auto">
          Built in the open with transparency and community at our core. No vendor lock-in, complete control over your data.
        </p>
      </div>

      <!-- GitHub Stats -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <!-- Stars -->
        <div class="stat-card text-center p-8 rounded-xl bg-slate-900/50 border border-slate-800">
          <div class="flex items-center justify-center mb-3">
            <svg 
              class="w-8 h-8 text-yellow-500" 
              fill="currentColor" 
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
            </svg>
          </div>
          <div class="text-4xl font-bold text-white mb-2" data-stat="stars">
            {formatNumber(stars)}
          </div>
          <div class="text-slate-400 font-medium">
            GitHub Stars
          </div>
        </div>

        <!-- Forks -->
        <div class="stat-card text-center p-8 rounded-xl bg-slate-900/50 border border-slate-800">
          <div class="flex items-center justify-center mb-3">
            <svg 
              class="w-8 h-8 text-indigo-500" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"
              />
            </svg>
          </div>
          <div class="text-4xl font-bold text-white mb-2" data-stat="forks">
            {formatNumber(forks)}
          </div>
          <div class="text-slate-400 font-medium">
            Forks
          </div>
        </div>

        <!-- Contributors -->
        <div class="stat-card text-center p-8 rounded-xl bg-slate-900/50 border border-slate-800">
          <div class="flex items-center justify-center mb-3">
            <svg 
              class="w-8 h-8 text-green-500" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
              />
            </svg>
          </div>
          <div class="text-4xl font-bold text-white mb-2" data-stat="contributors">
            {formatNumber(contributors)}
          </div>
          <div class="text-slate-400 font-medium">
            Contributors
          </div>
        </div>
      </div>

      <!-- License and Links -->
      <div class="flex flex-col items-center gap-6">
        <!-- License Badge -->
        <div class="flex items-center gap-3 px-6 py-3 rounded-full bg-slate-900 border border-slate-800">
          <svg 
            class="w-5 h-5 text-indigo-400" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
            />
          </svg>
          <span class="text-white font-semibold" data-license={license}>
            Licensed under {license}
          </span>
        </div>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4">
          <!-- View on GitHub CTA -->
          <a 
            href={githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="px-8 py-4 bg-slate-800 hover:bg-slate-700 text-white font-semibold rounded-lg transition-colors duration-200 border border-slate-700 flex items-center gap-3 justify-center"
            data-analytics="cta_view_github"
            data-github-url={githubUrl}
          >
            <svg 
              class="w-5 h-5" 
              fill="currentColor" 
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
            View on GitHub
          </a>

          <!-- Self-Hosting Docs Link -->
          <a 
            href={docsUrl}
            class="px-8 py-4 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg transition-colors duration-200 shadow-lg shadow-indigo-500/50 flex items-center gap-3 justify-center"
            data-analytics="cta_self_hosting_docs"
            data-docs-url={docsUrl}
          >
            <svg 
              class="w-5 h-5" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              />
            </svg>
            Self-Hosting Documentation
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    a {
      transition: none;
    }
  }
</style>
